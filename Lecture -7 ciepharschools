#include<iostream>
using namespace std;
int main(){
int password;
cout<<"enter password";
cin>>password;
while(password<999999){
cout<<"Password does not meet the req conditions .pls renetr password again";
cin>>password;
}
cout<<"The user has now entered a correct password";
return 0;
}

