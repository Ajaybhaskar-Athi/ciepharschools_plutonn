

#include <iostream>
using namespace std;

int main() {
    int x = 5;

    cout << "pre-increment:" << endl;
    cout << "Original x: " << x << endl;
    
    int result = ++x; // Increment x before using its value
    
    cout << "After pre-increment:" << endl;
    cout << "x: " << x << endl;
    cout << "Result: " << result << endl;

    return 0;
}
///////////////////////
#include <iostream>
using namespace std;

int main() {
    int y = 5;
    cout << "Using post-increment:" << endl;
    int result = y++; // Increment y after using its value
    cout << "After post-increment:" << endl;
    cout << "Result: " << result << endl;
    return 0;
}

/////////////////
#include <iostream>
using namespace std;

int main() {
int i,j,k;
i=0;
j=0;
k=0;
cout<<i<<"" <<j<<" "<<k<<endl;
j=i;
cout<<i<<"" <<j<<" "<<k<<endl;
k=++i;
cout<<i<<"" <<j<<" "<<k<<endl;
}

